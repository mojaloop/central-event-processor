{
  "name": "central-event-processor",
  "version": "11.0.0",
  "description": "CEP for Mojaloop Central-Ledger to monitor the notificaion kafka topic and act on it",
  "main": "app.js",
  "dependencies": {
    "@mojaloop/central-services-error-handling": "10.6.0",
    "@mojaloop/central-services-health": "10.6.0",
    "@mojaloop/central-services-logger": "10.6.0",
    "@mojaloop/central-services-shared": "11.2.0",
    "@mojaloop/central-services-stream": "10.6.0",
    "@mojaloop/ml-number": "8.2.0",
    "bluebird": "3.7.2",
    "config": "3.3.1",
    "json-rules-engine": "5.0.3",
    "leaked-handles": "5.2.0",
    "moment": "2.27.0",
    "mongoose": "5.10.2",
    "mustache": "4.0.1",
    "proxyquire": "2.1.3",
    "request": "2.88.2",
    "request-promise": "4.2.6",
    "rxjs": "6.6.2",
    "uuid4": "2.0.2"
  },
  "scripts": {
    "test": "npm run test:unit | faucet",
    "test:unit": "tape 'test/unit/**/*.test.js'",
    "test:xunit": "tape 'test/unit/**/*.test.js' | tap-xunit",
    "test:coverage": "istanbul cover tape -- 'test/unit/**/*.test.js'",
    "test:coverage-check": "npm run test:coverage && istanbul check-coverage",
    "start": "WITH_SASL=0&&LD_LIBRARY_PATH=$PWD/node_modules/node-rdkafka/build/deps && node app.js",
    "standard": "standard",
    "dev": "nodemon app.js",
    "docker:up": "docker-compose -f docker-compose.yml up",
    "audit:resolve": "SHELL=sh resolve-audit --production",
    "audit:check": "SHELL=sh check-audit --production",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u"
  },
  "pre-commit": [
    "dep:check",
    "audit:check",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/central-event-processor.git"
  },
  "author": "Valentin Genev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mojaloop/central-event-processor/issues"
  },
  "homepage": "https://github.com/mojaloop/central-event-processor#readme",
  "devDependencies": {
    "bluebird": "3.7.2",
    "faucet": "0.0.1",
    "istanbul": "1.1.0-alpha.1",
    "mockgoose": "8.0.4",
    "nodemon": "2.0.4",
    "npm-audit-resolver": "2.2.1",
    "npm-check-updates": "7.1.1",
    "pre-commit": "1.2.2",
    "rewire": "5.0.0",
    "sinon": "9.0.3",
    "standard": "14.3.4",
    "tap-xunit": "2.4.1",
    "tape": "5.0.1",
    "tapes": "4.1.0"
  }
}
