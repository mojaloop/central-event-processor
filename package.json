{
  "name": "central-event-processor",
  "version": "7.3.0",
  "description": "CEP for Mojaloop Central-Ledger to monitor the notificaion kafka topic and act on it.",
  "main": "app.js",
  "dependencies": {
    "@hapi/hapi": "18.3.1",
    "@mojaloop/central-services-error-handling": "7.3.0",
    "@mojaloop/central-services-shared": "7.2.0",
    "@mojaloop/central-services-stream": "6.2.2",
    "@mojaloop/central-services-health": "7.0.0",
    "bluebird": "3.5.5",
    "config": "3.2.2",
    "healthcheck-server": "1.0.0",
    "json-rules-engine": "3.1.0",
    "leaked-handles": "5.2.0",
    "moment": "2.24.0",
    "mongoose": "5.6.9",
    "mongoose-unique-validator": "2.0.3",
    "mustache": "3.0.1",
    "proxyquire": "2.1.2",
    "rc": "1.2.8",
    "request": "2.88.0",
    "request-promise": "4.2.4",
    "rxjs": "6.5.2",
    "rxjs-compat": "6.5.2",
    "uuid4": "1.1.4"
  },
  "scripts": {
    "test": "npm run test:unit | faucet",
    "test:unit": "tape 'test/unit/**/*.test.js'",
    "test:xunit": "tape 'test/unit/**/*.test.js' | tap-xunit",
    "test:coverage": "istanbul cover tape -- 'test/unit/**/*.test.js'",
    "test:coverage-check": "npm run test:coverage && istanbul check-coverage",
    "start": "WITH_SASL=0&&LD_LIBRARY_PATH=$PWD/node_modules/node-rdkafka/build/deps && node app.js",
    "standard": "standard",
    "dev": "nodemon app.js",
    "docker:up": "docker-compose -f docker-compose.yml up",
    "audit:resolve": "SHELL=sh resolve-audit",
    "audit:check": "SHELL=sh check-audit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mojaloop/central-event-processor.git"
  },
  "author": "Valentin Genev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mojaloop/central-event-processor/issues"
  },
  "homepage": "https://github.com/mojaloop/central-event-processor#readme",
  "devDependencies": {
    "bluebird": "3.5.5",
    "faucet": "0.0.1",
    "istanbul": "1.1.0-alpha.1",
    "jsonpath": "1.0.2",
    "mockgoose": "8.0.2",
    "mongodb-memory-server": "5.2.0",
    "npm-audit-resolver": "1.5.0",
    "npm-run-all": "4.1.5",
    "nodemon": "1.19.1",
    "rewire": "4.0.1",
    "sinon": "7.4.1",
    "sinon-mongoose": "2.3.0",
    "standard": "13.1.0",
    "tape": "4.11.0",
    "tapes": "4.1.0",
    "tap-xunit": "2.4.1"
  }
}
